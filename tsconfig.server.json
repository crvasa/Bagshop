{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/server",
    "target": "es2022",
    "module": "es2022",
    "types": ["node"],
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "files": ["src/main.server.ts"],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "moduleResolution": "node",
    "target": "es2022",
    "module": "es2020",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "src/main.server.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}

